{
    "manifest_version": 2,
    "name": "authifyNow",
	"author":"webVerts",
    "version": "0.1.3",
    "description": "Bridging the digital `TRUST` gap between companies and consumers",
	"homepage_url": "https://github.com/authifyWeb/authifyNow",
    "icons": {
      "64": "images/icon64.png",
      "32": "images/icon32.png"
	},

	"browser_specific_settings": {
  "gecko": {
    "id": "authifyNow@authifyweb.com"
  }
},
	
	"browser_action": {
        "default_popup": "popup.html",
        "default_icon": 
            "images/icon32.png"
		
    },
	"commands":{
		"_execute_browser_action":{
			"suggested_key":{
			"default":"Alt+Q"
			}
		}
		
	},
	"content_scripts": [
		{
			"matches": [
				"<all_urls>"
			],
			"js": [
				"resources/purify.min.js"
			]
		}
	],

	
	"options_ui": {
      "open_in_tab": true,
      "page": "resources/options.html"
   },
	"background": {
    "scripts": ["resources/background.js"],
    "persistent": false
	},
	
	
	
	
    "permissions": [
        "tabs"
    ]
	
}
	
